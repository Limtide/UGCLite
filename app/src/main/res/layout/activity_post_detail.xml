<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".activity.PostDetailActivity">
    <!-- 状态栏占位 -->
    <View
        android:id="@+id/status_bar_top"
        android:layout_width="0dp"
        android:layout_height="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/top_bar"

        style="@style/TopContentStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status_bar_top">


        <!-- 返回按钮 -->
        <ImageView
            android:id="@+id/back_button"
            style="@style/BackButtonStyle"
            android:src="@drawable/ic_back" />
        <!-- 用户头像 -->
        <ImageView
            android:id="@+id/user_avatar"
            style="@style/UserContentAvatarStyle" />
        <!-- 用户名 -->
        <TextView
            android:id="@+id/user_name"
            style="@style/UserContentNameStyle"
            android:text="用户" />

        <TextView
            android:id="@+id/home_tab"
            style="@style/FollowStyle"
            android:text="关注" />

    </LinearLayout>
    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/nestedscrollview_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/bottom_interaction_bar"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 图片展示ViewPager2 -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

            <!-- 页面指示器 - 长条式 -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_indicator"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:tabBackground="@drawable/tab_selector"
                app:tabGravity="fill"
                app:tabIndicatorHeight="0dp"
                app:tabMode="fixed" />

            <!-- 内容模块 -->
            <LinearLayout
                android:id="@+id/content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp">

                <!-- 标题 -->
                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="这是标题文本"
                    android:textSize="18sp"
                    android:textColor="#161823"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- 正文 -->
                <TextView
                    android:id="@+id/content_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="这是正文内容，可以显示较长的文本内容，支持多行显示。"
                    android:textSize="16sp"
                    android:textColor="#161823"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginBottom="12dp" />

                <!-- 日期和时间 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- 日期 -->
                    <TextView
                        android:id="@+id/date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今天"
                        android:textSize="14sp"
                        android:textColor="#999999"
                        android:fontFamily="sans-serif" />

                    <!-- 时间 -->
                    <TextView
                        android:id="@+id/time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14:30"
                        android:textSize="14sp"
                        android:textColor="#999999"
                        android:fontFamily="sans-serif"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <!-- 底部导航栏 -->
    <LinearLayout
        android:id="@+id/bottom_interaction_bar"
        style="@style/BottomNavContainerStyle"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="4dp"
        android:paddingEnd="16dp"
        android:paddingBottom="4dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toTopOf="@id/home_indicator_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="121dp"
            android:layout_height="48dp">

            <View
                android:id="@+id/left_placeholder"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:backgroundTint="#1618230D" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:orientation ="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/like_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="点赞"
                android:focusable="true"
                android:padding="12dp"
                android:src="@drawable/ic_comment" />
            <TextView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:text="125"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:orientation ="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/comment_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="评论"
                android:focusable="true"
                android:padding="12dp"
                android:src="@drawable/ic_comment" />
            <TextView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:text="125"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:orientation ="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/star_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="收藏"
                android:focusable="true"
                android:padding="12dp"
                android:src="@drawable/ic_comment" />
            <TextView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:text="125"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:orientation ="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/share_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="转发"
                android:focusable="true"
                android:padding="12dp"
                android:src="@drawable/ic_comment" />
            <TextView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:text="125"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Home Indicator 容器 -->
    <LinearLayout
        android:id="@+id/home_indicator_container"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
