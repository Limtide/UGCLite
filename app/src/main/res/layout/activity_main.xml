<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".MainActivity">

    <!-- 状态栏占位 -->
    <View
        android:id="@+id/status_bar_top"
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 顶部导航栏 -->
    <LinearLayout
        android:id="@+id/top_bar"
        style="@style/TopBarStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status_bar_top">

        <!--        <androidx.drawerlayout.widget.DrawerLayout-->
        <!--            android:id="@+id/drawer_layout"-->
        <!--            android:layout_width="44dp"-->
        <!--            android:layout_height="44dp">-->
        <!-- 菜单按钮 -->
        <ImageView
            android:id="@+id/menu_button"
            style="@style/MenuButtonStyle"
            android:src="@drawable/ic_menu"
            app:tint="#161823" />
        <!--        </androidx.drawerlayout.widget.DrawerLayout>-->
        <!-- 标签滚动区域 -->
        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    style="@style/TopTabStyle"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="11dp"
                    android:paddingBottom="11dp"
                    android:text="北京" />

                <TextView
                    style="@style/TopTabStyle"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="11dp"
                    android:paddingBottom="11dp"
                    android:text="团购" />

                <TextView
                    style="@style/TopTabStyle"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="11dp"
                    android:paddingBottom="11dp"
                    android:text="关注" />

                <TextView
                    style="@style/ActiveTabStyle"
                    android:text="社区" />

                <TextView
                    style="@style/TopTabStyle"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="11dp"
                    android:paddingBottom="11dp"
                    android:text="推荐" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- 搜索按钮 -->
        <ImageView
            android:id="@+id/search_button"
            style="@style/SearchButtonStyle"
            android:src="@drawable/ic_search"
            app:tint="#161823" />
    </LinearLayout>


    <!-- 内容区域 - 使用下拉刷新包装瀑布流 -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_container"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 主要内容容器 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 瀑布流RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp" />

            <!-- 空状态页面 -->
            <LinearLayout
                android:id="@+id/empty_state_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:padding="32dp">

                <!-- 空状态图标 -->
                <ImageView
                    android:id="@+id/empty_icon"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_empty_state"
                    android:layout_marginBottom="16dp"
                    android:alpha="0.6" />

                <!-- 空状态标题 -->
                <TextView
                    android:id="@+id/empty_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂无内容"
                    android:textSize="18sp"
                    android:textColor="#161823"
                    android:layout_marginBottom="8dp" />

                <!-- 空状态描述 -->
                <TextView
                    android:id="@+id/empty_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="网络连接异常，请检查网络后重试"
                    android:textSize="14sp"
                    android:textColor="#99161823"
                    android:gravity="center"
                    android:layout_marginBottom="24dp" />

<!--                &lt;!&ndash; 重试按钮 &ndash;&gt;-->
<!--                <Button-->
<!--                    android:id="@+id/retry_button"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="36dp"-->
<!--                    android:text="重新加载"-->
<!--                    android:textSize="14sp"-->
<!--                    android:textColor="#FFFFFF"-->
<!--                    android:background="@drawable/bg_retry_button"-->
<!--                    android:paddingHorizontal="24dp"-->
<!--                    android:minWidth="0dp" />-->

            </LinearLayout>

            <!-- 底部加载更多提示 -->
            <LinearLayout
                android:id="@+id/loading_more_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="16dp"
                android:visibility="gone"
                android:background="#FFFFFF">

                <ProgressBar
                    android:id="@+id/loading_more_progress"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="8dp"
                    style="?android:attr/progressBarStyleSmall" />

                <TextView
                    android:id="@+id/loading_more_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加载更多中..."
                    android:textSize="12sp"
                    android:textColor="#99161823" />

            </LinearLayout>

        </FrameLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- 底部导航栏 -->
    <LinearLayout
        android:id="@+id/bottom_nav_container"
        style="@style/BottomNavContainerStyle"
        app:layout_constraintBottom_toTopOf="@id/home_indicator_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- 首页标签 -->
        <TextView
            android:id="@+id/home_tab"
            style="@style/BottomNavActiveTabStyle"
            android:text="首页" />

        <!-- 朋友标签 -->
        <TextView
            android:id="@+id/friends_tab"
            style="@style/BottomNavTabStyle"
            android:text="朋友" />

        <!-- 拍摄按钮 -->
        <FrameLayout
            android:id="@+id/capture_button"
            style="@style/CaptureButtonStyle">

            <ImageView
                android:layout_width="36.79dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_capture_plus" />
        </FrameLayout>

        <!-- 消息标签 -->
        <TextView
            android:id="@+id/message_tab"
            style="@style/BottomNavTabStyle"
            android:text="消息" />

        <!-- 我标签 -->
        <TextView
            android:id="@+id/profile_tab"
            style="@style/BottomNavTabStyle"
            android:text="我" />
    </LinearLayout>

    <!-- Home Indicator 容器 -->
    <LinearLayout
        android:id="@+id/home_indicator_container"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



